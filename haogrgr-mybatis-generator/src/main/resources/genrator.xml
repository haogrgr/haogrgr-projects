<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE generatorConfiguration  
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"  
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

	<!-- 配置文件路径 -->
	<properties resource="app-config.properties" />

	<context id="DB2Tables" targetRuntime="MyBatis3">

		<property name="xmlFormatter" value="com.haogrgr.mybatis.generator.utils.SortedXmlFormatter" />

		<plugin type="com.haogrgr.mybatis.generator.plugin.MapperPlugin">
			<property name="baseMapperName" value="${app.baseMapperName}" />
			<property name="toBeReplace" value="${app.toBeReplace}" />
		</plugin>

		<plugin type="org.mybatis.generator.plugins.ToStringPlugin" />
		<plugin type="com.haogrgr.mybatis.generator.plugin.ModelPlugin">
			<property name="generateSerialVersionField" value="${app.generateSerialVersionField}" />
			<property name="toBeReplace" value="${app.toBeReplace}" />
		</plugin>


		<commentGenerator>
			<!-- 是否去除自动生成的注释 true：是 ： false:否 -->
			<property name="suppressAllComments" value="true" />
		</commentGenerator>

		<!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
		<jdbcConnection driverClass="${db.driver}" connectionURL="${db.url}" userId="${db.user}" password="${db.password}">
		</jdbcConnection>

		<!-- true:将DECIMAL,NUMERIC解析为BigDecimal false:解析为Integer -->
		<javaTypeResolver>
			<property name="forceBigDecimals" value="true" />
		</javaTypeResolver>

		<javaModelGenerator targetProject="${target.project}" targetPackage="${model.package}">
			<property name="enableSubPackages" value="false" />
			<property name="trimStrings" value="false" />
		</javaModelGenerator>

		<sqlMapGenerator targetProject="${target.project}" targetPackage="${mapper.xml.package}">
			<property name="enableSubPackages" value="false" />
		</sqlMapGenerator>

		<javaClientGenerator type="XMLMAPPER" targetProject="${target.project}" targetPackage="${mapper.java.package}">
			<property name="enableSubPackages" value="false" />
		</javaClientGenerator>

		<!-- tableName:用于自动生成代码的数据库表；domainObjectName:对应于数据库表的javaBean类名 -->
		<table schema="test" tableName="user" domainObjectName="UserModel" enableSelectByExample="false" enableDeleteByExample="false" enableCountByExample="false" enableUpdateByExample="false" selectByExampleQueryId="false">
			<generatedKey column="user_id" sqlStatement="JDBC" />
			<!-- 忽略列，不生成bean 字段 -->
			<!-- <ignoreColumn column="FRED" /> -->
			<!-- 指定列的java数据类型 -->
			<!-- <columnOverride column="LONG_VARCHAR_FIELD" jdbcType="VARCHAR" /> -->
		</table>

		<table schema="test" tableName="user_phone" domainObjectName="UserPhoneModel" enableSelectByExample="false" enableDeleteByExample="false" enableCountByExample="false" enableUpdateByExample="false" selectByExampleQueryId="false">
		</table>

		<table schema="test" tableName="user_info" domainObjectName="UserInfoModel" enableSelectByExample="false" enableDeleteByExample="false" enableCountByExample="false" enableUpdateByExample="false" selectByExampleQueryId="false">
		</table>
	</context>
</generatorConfiguration> 